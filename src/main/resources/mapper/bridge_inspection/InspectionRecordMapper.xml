<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hardworkgroup.bridge_health_system.bridge_inspection.dao.InspectionRecordDao">

    <resultMap id="userAndRole" type="com.hardworkgroup.bridge_health_system.common_model.domain.system.entity.User">
        <id property="userID" column="userID"/>
        <result property="userPhone" column="userPhone"/>
        <result property="userName" column="userName"/>
        <result property="userPassword" column="userPassword"/>
        <result property="userEmail" column="userEmail"/>
        <result property="userStatus" column="userStatus"/>
        <result property="userLevel" column="userLevel"/>
        <association property="roles"  javaType="com.hardworkgroup.bridge_health_system.common_model.domain.system.entity.Role">
            <id property="roleID" column="roleID"/>
            <result property="roleName" column="roleName"/>
            <result property="roleDescription" column="roleDescription"/>
        </association>
    </resultMap>

    <!--根据id查询巡检记录-->
    <select id="getRecordByID" resultType="com.hardworkgroup.bridge_health_system.common_model.domain.bridge_inspection.entity.InspectionRecord">
        select * from inspection_record where inspectionRecordID = #{inspectionRecordID}
    </select>

    <!--查询所有巡检记录-->
    <select id="selectAllInspectionRecord" resultType="com.hardworkgroup.bridge_health_system.common_model.domain.bridge_inspection.entity.InspectionRecord">
        select * from inspection_record
    </select>

    <!--更新巡检记录-->
    <update id="updateByKey" parameterType="map">
        update inspection_record
        set inspectionTime=#{inspectionTime},inspectionRecordTitle=#{inspectionRecordTitle},inspectionContentDescription=#{inspectionContentDescription}
        where inspectionRecordID = #{inspectionRecordID}
    </update>

    <!--ID删除巡检记录-->
    <delete id="deleteByKey" parameterType="map">
    	delete from inspection_record where inspectionRecordID = #{inspectionRecordID}
  	</delete>

    <!--ID添加巡检记录-->
    <insert id="insertByKey" >
        insert into inspection_record (inspectionPlanID,inspectionTime,inspectionRecordTitle,inspectionContentDescription)
        value (#{inspectionPlanID},#{inspectionTime},#{inspectionRecordTitle},#{inspectionContentDescription})
    </insert>
</mapper>